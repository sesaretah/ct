<div class="tab-pane fade" id="recent-channels">
  <p class="margin-top-10"><i class="fa fa-hand-o-left" style='vertical-align:middle'></i> <%=t :channels_you_joined%></p>
  <hr/>
  <ul class="list-group">
    <%= link_to new_channel_path do%>
    <li class="list-group-item">
      <i class="fa fa-plus"></i> <%=t :add_new_channel%>
    </li>
    <%end%>
  </ul>
  <ul class="messages-list relative top-0">
    <% for c in current_user.channels%>
    <%= render partial: 'channels/item', locals: {channel: c}%>
    <%end%>
  </ul>
</div>
