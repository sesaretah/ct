	<script src="/assets/bootstrap-tokenfield.js"></script>
<div id='research-form'>
  <div class="container-fluid container-fullw bg-white">
    <div class="row">
      <div class="col-md-12">
        <% if research.id == nil%>
        <h5 class="over-title"> <span class="text-bold"><%= t(:enter_new_research)%></span></h5>
        <%else%>
        <h5 class="over-title"> <span class="text-bold"><%= t(:edit_research)%></span></h5>

        <%end%>
        <div class="panel panel-white">
          <div class="panel-body">
            <% @research = research%>
            <%= form_for @research , :remote => true do |f| %>

            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label><%= f.label :name %></label>
                  <%= f.text_field :name, class: "form-control"  %>
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <label><%= f.label :pub_year %></label>
                  <%= f.text_field :pub_year, class: "form-control"  %>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <label><%= f.label :pub_type %></label>
                  <%= f.text_field :pub_type, class: "form-control"  %>
                </div>
              </div>

              <div class="col-md-7">
                <div class="form-group">
                  <label><%= f.label :pub_name %></label>
                  <%= f.text_field :pub_name, class: "form-control"  %>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label><%= f.label :pub_authors %></label>
                  <%= f.text_field :pub_authors , class: "form-control"%>
                </div>
              </div>
            </div>
            <hr>
            <div class="form-actions">
              <button type="submit" class="btn btn-primary pull-left">
                <%= t(:submit)%> <i class="fa fa-arrow-circle-left"></i>
              </button>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>


  </div>
</div>
