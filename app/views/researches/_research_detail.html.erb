<div id='research-detail'>
  <div class="col-md-7 padding-right-0 padding-left-0">
    <div class="panel panel-white no-radius">
      <div class="panel-heading border-light">
        <h4 class="panel-title"></h4>
        <ul class="panel-heading-tabs border-light">
          <li class="panel-tools">
            <a data-original-title="Refresh" data-toggle="tooltip" data-placement="top" class="btn btn-transparent btn-sm panel-refresh" href="#"><i class="ti-reload"></i></a>
          </li>
        </ul>
      </div>
      <div class="panel-body ">
        <div class="row">
          <div class="col-md-12">
            <p>
              <%=t :title%>:
              <%= research.name%>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <p>
              <%=t :pub_year%>:
              <%= research.pub_year%>
            </p>
          </div>
          <div class="col-md-4">
            <p>
              <%=t :pub_type%>:
              <%= research.pub_year%>
            </p>
          </div>
          <div class="col-md-4">
            <p>
              <%=t :pub_name%>:
              <%= research.pub_year%>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <p>
            <%=t :pub_authors%>:
            <%= research.pub_authors%>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <p>
              <%=t :abstract%>:
              <%= research.abstract%>
            </p>
          </div>
        </div>
        <hr/>
      </div>
    </div>
  </div>
</div>
