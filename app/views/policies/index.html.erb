<p id="notice"><%= notice %></p>

<h1>Listing Policies</h1>

<table>
  <thead>
    <tr>
      <th>Privatable type</th>
      <th>Privatable</th>
      <th>Policy type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @policies.each do |policy| %>
      <tr>
        <td><%= policy.privatable_type %></td>
        <td><%= policy.privatable_id %></td>
        <td><%= policy.policy_type %></td>
        <td><%= link_to 'Show', policy %></td>
        <td><%= link_to 'Edit', edit_policy_path(policy) %></td>
        <td><%= link_to 'Destroy', policy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

