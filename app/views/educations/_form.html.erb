<div id='education-form'>
  <div class="container-fluid container-fullw bg-white">
    <div class="row">
      <div class="col-md-12">
        <% if education.id == nil%>
        <h5 class="over-title"> <span class="text-bold"><%= t(:enter_new_education)%></span></h5>
        <%else%>
        <h5 class="over-title"> <span class="text-bold"><%= t(:edit_education)%></span></h5>

        <%end%>
        <div class="panel panel-white">
          <div class="panel-body">
            <% @education = education%>
            <%= form_for @education , :remote => true do |f| %>

            <div class="row">
              <div class="col-md-3">
                <div class="form-group">
                  <label><%= f.label :name %></label>
                  <%= f.text_field :name, class: "form-control" %>
                </div>
              </div>

              <div class="col-md-2">
                <div class="form-group">
                  <label><%= f.label :grade %></label>
                  <%= f.select( :grade, grades, {}, {:class => "form-control"})  %>
                  <% f.text_field :grade, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <label><%= f.label :field %></label>
                  <%= f.text_field :field, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-2">
                <div class="form-group">
                  <label><%= f.label :start_year %></label>
                  <%= f.text_field :start_year , class: "form-control"%>
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <label><%= f.label :end_year %></label>
                  <%= f.text_field :end_year , class: "form-control"%>
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <label><%= f.label :city %></label>
                  <%= f.text_field :city , class: "form-control"%>
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <label><%= f.label :country %></label>
                  <%= f.text_field :country, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class='row'>
              <div class="col-md-6">
                <div class="form-group">
                  <label><%= f.label :title %></label>
                  <%= f.text_field :title, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <label><%= f.label :thesis_gpa %></label>
                  <%= f.text_field :thesis_gpa, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="form-actions">
              <button type="submit" class="btn btn-primary pull-left">
                <%= t(:submit)%> <i class="fa fa-arrow-circle-left"></i>
              </button>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
