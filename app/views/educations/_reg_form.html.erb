<%
@edu_history = []
4.times do
  @edu_history << Education.new
end
%>
<div class="col-md-7">
  <%= form_tag educations_path do %>
  <fieldset>
    <legend>
      <%= t(:education_history)%>
    </legend>
  <% @edu_history.each do |edu| %>
  <%= fields_for 'edu_history[]', edu do |f| %>

    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label><%= f.label :name %></label>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="col-md-2">
        <div class="form-group">
          <label><%= f.label :grade %></label>
          <%= f.select( :grade, grades, {}, {:class => "form-control"})  %>
          <% f.text_field :grade, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label><%= f.label :field %></label>
          <%= f.text_field :field, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <label><%= f.label :gpa %></label>
          <%= f.number_field :gpa,step: :any, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <div class="form-group">
          <label><%= f.label :start_year %></label>
          <%= f.text_field :start_year , class: "form-control"%>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <label><%= f.label :end_year %></label>
          <%= f.text_field :end_year , class: "form-control"%>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label><%= f.label :city %></label>
          <%= f.text_field :city , class: "form-control"%>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label><%= f.label :country %></label>
          <%= f.text_field :country, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class='row'>
      <div class="col-md-10">
        <div class="form-group">
          <label><%= f.label :title %></label>
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <label><%= f.label :thesis_gpa %></label>
          <%= f.text_field :thesis_gpa, class: "form-control" %>
        </div>
      </div>
    </div>
    <hr />
    <% end %>
    <% end %>
    <div class="row top30">
      <div class="form-group col-xs-3 pull-left">
        <%= content_tag :button, :type => :submit,id: 'subbtn', :class => "btn btn-o btn-primary " do %>
        <i class="icon-ok bigger-110"></i>
        <%=t :submit%>
        <% end %>
        <%= link_to '/registeration_steps?step=3' do%>
        <button  class="btn btn-o btn-success " , style: 'margin-left:2px;'>
          <%= t(:next)%>
        </button>
        <%end%>
      </div>
    </div>
  </fieldset>
  <%= hidden_field_tag 'caller', 'reg'%>
  <% end %>
</div>
