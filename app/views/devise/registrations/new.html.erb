<div class="row">
  <div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <div class="logo margin-top-30">
      <img src="/assets/logo.png" alt="Clip-Two"/>
    </div>
    <!-- start: LOGIN BOX -->
    <div class="box-register">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-register") do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <legend>
          <%= t(:sign_up)%>
        </legend>
        <p>
          <%= t(:enter_your_personal_details_below)%>

        </p>

        <div class="form-group">
          <span class="input-icon">
            <% f.label :email %>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: t(:email)%>
            <i class="fa fa-envelope"></i>
          </span>
        </div>

        <div class="form-group form-actions">
          <span class="input-icon">

            <% f.label :password %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: t(:password) %>
            <i class="fa fa-lock"></i>
          </span>
        </div>


      <div class="form-group form-actions">
        <span class="input-icon">
        <% f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control", placeholder: t(:password_again)%>
        <i class="fa fa-lock"></i>
      </span>
    </div>
    <div class="form-actions">
    								<p>
    									<%= t(:already_have_an_account_?)%>
    									<a href="/users/sign_in">
    										<%= t(:login)%>
    									</a>
    								</p>


    <button type="submit" class="btn btn-primary pull-left">
      <%= t(:submit)%> <i class="fa fa-arrow-circle-left"></i>
    </button>
</div>
      <% end %>

      <% render "devise/shared/links" %>
      <div class="copyright">
      </div>
      <!-- end: COPYRIGHT -->
    </div>
    <!-- end: LOGIN BOX -->
  </div>
</div>
