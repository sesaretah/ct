<% @random_string = SecureRandom.hex%>
<li class="messages-item padding-5 <%= @bg%>" id='<%=@random_string %>'>
  <%= link_to '/events/view_content/'+ event.id.to_s+'?rnd='+@random_string,:remote => true  do%>
  <%= image_tag event.avatar(:thumb), :class => "messages-item-avatar bordered border-primary"%>
  <span class="messages-item-from"><%= event.name%></span>
  <% @e = DateTime.new(event.event_date.year, event.event_date.month, event.event_date.day, event.start_time.hour, event.start_time.min, 0, "+04:30")  %>
  <% if @e < Time.now%>
  <div class="ribbon"><span style="color: white;"><%=t :ended%></span></div>
  <%end%>
  <div class="messages-item-time">
    <span class="text">
    </span>
  </div>
  <span class="messages-item-subject"></span>
  <span class="messages-item-content"><%= truncate(event.description, :length => 20)%></span>
  <div class="messages-item-time" style="margin-top:10px">
    <% @par = Participation.where(user_id: current_user.id, event_id: event.id, role: [1,3] ).first%>
    <% if !@par.blank? %>
    <div id='<%= @random_string%>-label'>
      <% @v = Visit.where(user_id: current_user.id, visitable_id: event.id, visitable_type: 'Event').first%>
      <% if !@v.blank?%>
      <% @count = event.comments.where("created_at > ?", @v.created_at ).count%>
      <% if @count > 0%>
      <span class="label label-info pull-left" style="color: white;"><%= @count%></span>
      <% end%>
      <%else%>
      <% @count = event.comments.count%>
      <% if @count > 0%>
      <span class="label label-info pull-left" style="color: white;"><%= @count%></span>
      <% end%>
      <%end%>
    </div>
    <%end%>
  </div>
  <%end%>
</li>
