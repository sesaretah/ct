<div class="modal fade bs-example-modal-lg"  tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id='addprofile'>
  <div class="modal-dialog modal-dialog modal-lg">
    <div class="modal-content" style="background:white;">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel"><%= t(:add_user_to_event)%></h4>
      </div>
      <div class="modal-body">

        <div class="row">
          <div class='col-md-6'>
            <%= form_tag '/profiles/search/1',:method => :get,:remote => :true do%>
            <div class="input-group">
              <%= text_field_tag :q, '' , {:class=>"form-control", :id => "nav-search-input", :placeholder => "#{t(:search)}"}%>
              <%= hidden_field_tag 'caller', 'addtogroup'%>
              <%= hidden_field_tag 'class', 'Event'%>
              <%= hidden_field_tag 'class_id', event.id%>
              <span class="input-group-btn">
                <button class="btn btn-primary" type="submit" >
                  <i class="fa fa-search fa-fw" style=" vertical-align: middle;"></i> <%= t(:search)%>
                </button>
              </span>
            </div>
            <%end%>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <h5 class="over-title"><%= t(:search_results)%></h5>
            <div class="panel panel-white">
              <div class="panel-body">
                <% @profiles = {}%>
                  <%= render partial: 'profiles/compactlist', locals: {profiles: @profiles, item: event}%>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <h5 class="over-title"><%= t(:users_in_event)%></h5>
            <div class="panel panel-white">
              <div class="panel-body">
                <%= render partial: 'participations/list', locals: {event: event}%>
              </div>
            </div>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-o" data-dismiss="modal">
          <%= t(:close)%>
        </button>
      </div>
    </div>
  </div>
</div>
