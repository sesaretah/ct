<p id="notice"><%= notice %></p>

<h1>Listing Blockings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Target</th>
      <th>Blocked type</th>
      <th>Blocked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blockings.each do |blocking| %>
      <tr>
        <td><%= blocking.user_id %></td>
        <td><%= blocking.target_id %></td>
        <td><%= blocking.blocked_type %></td>
        <td><%= blocking.blocked_id %></td>
        <td><%= link_to 'Show', blocking %></td>
        <td><%= link_to 'Edit', edit_blocking_path(blocking) %></td>
        <td><%= link_to 'Destroy', blocking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

