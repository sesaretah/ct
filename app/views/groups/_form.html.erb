<div class="wrap-content container" id="container">
  <!-- start: PAGE TITLE -->
  <section id="page-title">
    <div class="row">
      <div class="col-sm-8">
        <h1 class="mainTitle"><%= t(:new_group)%></h1>
        <span class="mainDescription"><%= t(:please_enter_new_group_data)%></span>
      </div>
      <ol class="breadcrumb">
        <li>
          <span></span>
        </li>
        <li class="active">
          <span></span>
        </li>
      </ol>
    </div>
  </section>
  <div class="container-fluid container-fullw bg-white">
    <div class="row">
      <div class="col-md-12">
        <h5 class="over-title"> <span class="text-bold"></span></h5>
        <div class="panel panel-white">
          <div class="panel-body">
            <%= form_for(@group) do |f| %>
            <% if @group.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

              <ul>
                <% @group.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
            </div>
            <% end %>

            <div class="row">
              <div class="form-group col-xs-4">
                * <%= f.label :name %><br>
                <%= f.text_field :name , id: 'name', :class => "form-control" %>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-xs-4">
                <%= f.label :description %><br>
                <%= f.text_area :description, :class => "form-control" %>
              </div>
            </div>
            <div class="row">
              <div class=" selectwrap form-group col-xs-4">
                <%= f.label :p_type %><br>
                <%= f.select( :p_type, ptypes, {}, {:class => "form-control"})  %>
              </div>
            </div>

            <div class="row">
              <div class="selectwrap form-group col-xs-4">
                <%= f.label :i_type %><br>
                <%= f.select( :i_type, itypes, {}, {:class => "form-control"})  %>
              </div>
            </div>


              <div class="row">
                <div class="form-group col-xs-4">
                  <%if !@group.avatar.blank?%>
                  <%= image_tag @group.avatar(:medium), id: 'avatar',:class => "messages-item-avatar bordered border-primary"%>
                  <%else%>
                  <img id='avatar'></img>
                  <%end%>
                  <div class="fileUpload btn btn-o btn-light-purple">
                    <%if @group.avatar.blank?%>
                    <span><i class="fa fa-camera" style='vertical-align:middle;'></i> <%=t :choose_a_file_for_avatar%>...</span>
                    <%else%>
                    <span><i class="fa fa-camera" style='vertical-align:middle;'></i> <%=t :change_photo%>...</span>
                    <%end%>
                    <%= f.file_field :avatar, class: "upload", onchange: "readURL(this);" %>
                  </div>
                </div>
              </div>

              <script>
              function readURL(input) {
                if (input.files && input.files[0]) {
                  var reader = new FileReader();

                  reader.onload = function (e) {
                    $('#avatar')
                    .attr('src', e.target.result)
                    .width(120);
                  };

                  reader.readAsDataURL(input.files[0]);
                }
              }
              </script>

            <div class="row top30">
              <div class="form-group col-xs-1 pull-left">
                <%= content_tag :button, :type => :submit,id: 'subbtn', :class => "btn btn-o btn-primary" do %>
                <i class="icon-ok bigger-110"></i>
                <%=t :submit%>
                <% end %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<script>
$(document).ready(function(){
    $('#subbtn').attr('disabled',true);
    $('#name').keyup(function(){
        if($(this).val().length !=0)
            $('#subbtn').attr('disabled', false);
        else
            $('#subbtn').attr('disabled',true);
    })
});
</script>
