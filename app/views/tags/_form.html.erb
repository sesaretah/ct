<div id='tag-form'>
  <div class="container-fluid container-fullw bg-white">
    <div class="row">
      <div class="col-md-12">
        <% if tag.id == nil%>
        <h5 class="over-title"> <span class="text-bold"><%= t(:enter_new_tag)%></span></h5>
        <%else%>
        <h5 class="over-title"> <span class="text-bold"><%= t(:edit_tag)%></span></h5>

        <%end%>
        <div class="panel panel-white">
          <div class="panel-body">
            <% @tag = tag%>
            <%= form_for @tag , :remote => true do |f| %>
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label><%= f.label :title %></label>
                  <%= f.text_field :title, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="form-actions">
              <button type="submit" class="btn btn-primary pull-left">
                <%= t(:submit)%> <i class="fa fa-arrow-circle-left"></i>
              </button>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
