<div id='announcement-form'>
  <div class="container-fluid container-fullw bg-white">
    <div class="row">
      <div class="col-md-12">
        <% if announcement.id == nil%>
        <h5 class="over-title"> <span class="text-bold"><%= t(:enter_new_announcement)%></span></h5>
        <%else%>
        <h5 class="over-title"> <span class="text-bold"><%= t(:edit_announcement)%></span></h5>

        <%end%>
        <div class="panel panel-white">
          <div class="panel-body">
            <% @announcement = announcement%>
            <%= form_for @announcement, remote: true do |f| %>
            <% if @announcement.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@announcement.errors.count, "error") %> prohibited this announcement from being saved:</h2>

              <ul>
                <% @announcement.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
            </div>
            <% end %>

            <%= f.hidden_field :lab_id, :value => lab.id%>

            <div class="row">
              <div class="col-md-8">
                <div class="form-group">
                  <label><%= f.label :title %></label>
                  <%= f.text_field :title, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label><%= f.label :content %></label>
                  <%= f.text_area :content, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="form-actions">
              <button type="submit" class="btn btn-primary pull-left">
                <%= t(:submit)%> <i class="fa fa-arrow-circle-left"></i>
              </button>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
