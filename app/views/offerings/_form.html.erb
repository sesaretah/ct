<div id='offering-form'>
    <div class="row margin-right-0 margin-left-0">
      <div class="col-md-12">
        <% if offering.id == nil%>
        <h5 class="over-title"> <span class="text-bold"><%= t(:enter_new_offering)%></span></h5>
        <%else%>
        <h5 class="over-title"> <span class="text-bold"><%= t(:edit_offering)%></span></h5>

        <%end%>
        <div class="panel panel-white">
          <div class="panel-body">
            <% @offering = offering%>
            <%= form_for @offering , :remote => true do |f| %>

            <div class="row">
              <div class="col-md-3">
                <div class="form-group">
                  <label><%= f.label :period %></label>
                  <%= f.select( :period, periods, {}, {:class => "form-control"})  %>
                </div>
              </div>

              <div class="col-md-2">
                <div class="form-group">
                  <label><%= f.label :year %></label>
                  <% @now = JalaliDate.to_jalali(Time.now)%>
                  <%= select_tag "year", options_for_select(1380..1410, @now.year) , class: "form-control" %>
                  <% f.text_field :year, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <label><%= f.label :location %></label>
                  <%= f.text_field :location, class: "form-control" %>
                </div>
              </div>
              <%= f.hidden_field :course_id, value: course.id%>
              <div class="col-md-3">
                <div class="form-group margin-bottom-0" style='margin-top: 9px;'>
                  <br/>
                <button type="submit" class="btn btn-light-azure btn-squared">
                  <i class="fa fa-check" style="color: white !important;vertical-align: middle;"></i>&nbsp <%= t(:submit)%>&nbsp
                </button>
              </div>
              </div>
            </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>
