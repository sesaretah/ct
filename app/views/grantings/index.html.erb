<div class='row'>
  <fieldset>
    <legend>
      <%= t(:change_users_grants)%>
    </legend>
    <div class="panel-scroll height-550 ps-container ps-active-y">
      <div class="col-md-12">
        <div class="row">
          <div class='col-md-6'>
            <%= form_tag '/profiles/grant_search/1',:method => :get,:remote => :true do%>
            <div class="input-group">
              <%= text_field_tag :q, '' , {:class=>"form-control", :id => "nav-search-input", :placeholder => "#{t(:search)}"}%>
              <%= hidden_field_tag 'caller', 'addtogroup'%>

              <span class="input-group-btn">
                <button class="btn btn-primary" type="submit" >
                  <i class="fa fa-search fa-fw" style=" vertical-align: middle;"></i> <%= t(:search)%>
                </button>
              </span>
            </div>
            <%end%>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <fieldset>
              <legend>
                <%= t(:search_results)%>
              </legend>
              <div style='margin-bottom:15px;'>
              </div>
              <div id='grant-search'></div>
            </fieldset>
          </div>
          <div class="col-md-6">
            <fieldset>
              <legend>
                <%= t(:user_roles)%>
              </legend>
              <div style='margin-bottom:15px;'>
              </div>
              <div id='grants-detail'></div>
            </fieldset>
          </div>
        </div>
      </div>
    </div>
  </fieldset>
</div>
